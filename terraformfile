pipeline {
    agent any

    environment {
        AWS_REGION = 'us-west-2'
        TF_DIR = './terraform'  // chemin vers ton dossier Terraform
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Clonage du d√©p√¥t...'
                git branch: 'main', url: 'https://github.com/fallmarieme2000-dot/terraform.git'
            }
        }

        stage('Terraform Init') {
            steps {
                echo '‚öôÔ∏è Initialisation Terraform...'
                withAWS(credentials: 'aws-credentials', region: "${AWS_REGION}") {
                    dir("${TF_DIR}") {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                echo 'üìù G√©n√©ration du plan Terraform...'
                withAWS(credentials: 'aws-credentials', region: "${AWS_REGION}") {
                    dir("${TF_DIR}") {
                        sh 'terraform plan -out=tfplan'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                echo 'üöÄ Application du plan Terraform...'
                input message: 'Souhaitez-vous appliquer le plan Terraform ?'
                withAWS(credentials: 'aws-credentials', region: "${AWS_REGION}") {
                    dir("${TF_DIR}") {
                        sh 'terraform apply -auto-approve tfplan'
                    }
                }
            }
        }
    }

    post {
        always {
            echo '‚úÖ Pipeline Terraform termin√©.'
        }
        failure {
            echo '‚ùå Le pipeline a √©chou√©.'
        }
    }
}
