pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1'
        TF_DIR = './terraform'  // chemin vers ton dossier Terraform
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Clonage du dÃ©pÃ´t...'
                git 'https://github.com/fallmarieme2000-dot/terraform.git'
            }
        }

        stage('Terraform Init') {
            steps {
                echo 'âš™ï¸ Initialisation Terraform...'
                withAWS(credentials: 'aws-credentials', region: "${AWS_REGION}") {
                    dir("${TF_DIR}") {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                echo 'ğŸ“ GÃ©nÃ©ration du plan Terraform...'
                withAWS(credentials: 'aws-credentials', region: "${AWS_REGION}") {
                    dir("${TF_DIR}") {
                        sh 'terraform plan -out=tfplan'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                echo 'ğŸš€ Application du plan Terraform...'
                input message: 'Souhaitez-vous appliquer le plan Terraform ?'
                withAWS(credentials: 'aws-credentials', region: "${AWS_REGION}") {
                    dir("${TF_DIR}") {
                        sh 'terraform apply -auto-approve tfplan'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'âœ… Pipeline Terraform terminÃ©.'
        }
        failure {
            echo 'âŒ Le pipeline a Ã©chouÃ©.'
        }
    }
}
